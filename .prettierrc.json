{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "quoteProps": "consistent",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "importOrder": [
    "^@stencil/core$",
    "<THIRD_PARTY_MODULES>",
    "^(@fc|@utils|@root)",
    "^[./].*.(png|webp|jpg|jpeg|svg|json)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators"
  ]
}